# Portable App Configuration
# This configuration is designed for the portable/offline version 
# No external services like Supabase, OpenAI, or Anthropic are required

# SQLite Configuration (used in portable mode)
PORTABLE_MODE=true
SQLITE_DB_PATH=./data/local.db

# Application Configuration
NEXT_PUBLIC_APP_URL=https://localhost:3000
NODE_ENV=production

# Security Configuration
NEXTAUTH_SECRET=portableAppSecretKey123
NEXTAUTH_URL=https://localhost:3000

# Feature Flags
ENABLE_LLM_FEATURES=true
ENABLE_ADVANCED_MAPPING=false
ENABLE_OFFLINE_MODE=true

# Local LLM Configuration (using Ollama)
LOCAL_LLM_API_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama3
LLM_PROVIDER=local

# Default Admin Account
DEFAULT_ADMIN_EMAIL=admin@localhost
DEFAULT_ADMIN_PASSWORD=admin123

# Server Settings
PORT=3000
HTTPS_ENABLED=true 